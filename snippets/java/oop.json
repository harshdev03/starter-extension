    "Java OOP Example": {
        "prefix": "java-oop",
        "body": [
            "public class Person {",
            "    private String name;",
            "    private int age;",
            "",
            "    public Person(String name, int age) {",
            "        this.name = name;",
            "        this.age = age;",
            "    }",
            "",
            "    public void greet() {",
            "        System.out.println(\"Hello, my name is \" + name + \" and I am \" + age + \" years old.\");",
            "    }",
            "}",
            "",
            "public class Main {",
            "    public static void main(String[] args) {",
            "        Person person = new Person(\"John\", 25);",
            "        person.greet();",
            "    }",
            "}"
        ],
        "description": "Basic Java class with constructor and object creation"
    }
}
